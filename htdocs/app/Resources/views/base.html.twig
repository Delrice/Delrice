<!DOCTYPE html>
<html lang="{{ locale }}">
    <head>
        <meta charset="utf-8">

        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <meta name="author" content="{{ 'head.meta.author'|trans }}">
        <meta name="description" content="{{ 'head.meta.description'|trans }}">
        <meta name="keywords" content="{{ 'head.meta.keywords'|trans }}">

        <meta property="og:title" content="{{ 'head.meta.og.title'|trans }}" />
        <meta property="og:description" content="{{ 'head.meta.og.description'|trans }}" />
        <meta property="og:type" content="{{ 'head.meta.og.type'|trans }}" />
        <meta property="og:url" content="{{ 'head.meta.og.url'|trans }}" />
        <meta property="og:image" content="{{ 'head.meta.og.image'|trans }}" />

        <link rel="canonical" href="https://www.delrice.fr">

        <title>{% block title %}{{ 'head.meta.title'|trans }}{% endblock %}</title>

        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-113082477-1"></script>
    </head>

    <body id="page-top">
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe name="GoogleTagManager" sandbox="allow-scripts" src="https://www.googletagmanager.com/ns.html?id=GTM-MSCMBQC" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
